{
  "name": "electunes",
  "version": "1.0.0-rc4",
  "description": "Simple MusicPlayer",
  "main": "src/index.js",
  "private": true,
  "scripts": {
    "start": "chcp 65001 && electron-forge start",
    "build": "electron-forge make",
    "save": "npm install --save"
  },
  "keywords": [
    "Electron",
    "MusicPlayer"
  ],
  "author": {
    "name": "Nich87"
  },
  "license": "MIT",
  "build": {
    "win": {
      "icon": "Assets/Electunes.ico"
    }
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "options": {
              "iconUrl": "Assets/Electunes.ico",
              "setupIcon": "Assets/Electunes.ico"
            }
          }
        },
        {
          "name": "@electron-forge/maker-dmg",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "options": {
              "icon": "Assets/Electunes.png"
            }
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {
            "options": {
              "icon": "Assets/Electunes.png"
            }
          }
        }
      ]
    }
  },
  "dependencies": {
    "about-window": "^1.15.2",
    "discord-rpc": "^4.0.1",
    "electron-json-storage": "^4.5.0",
    "electron-reload": "*",
    "electron-squirrel-startup": "^1.0.0",
    "howler": "^2.2.3",
    "music-metadata-browser": "^2.5.9"
  },
  "devDependencies": {
    "@electron-forge/cli": "6.0.0-beta.66",
    "@electron-forge/maker-dmg": "6.0.0-beta.66",
    "@electron-forge/maker-deb": "6.0.0-beta.66",
    "@electron-forge/maker-rpm": "6.0.0-beta.66",
    "@electron-forge/maker-squirrel": "6.0.0-beta.66",
    "@electron-forge/maker-zip": "6.0.0-beta.66",
    "electron": "^20.2.0"
  }
}
